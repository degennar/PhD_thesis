@article{mei_self-consistent_2020,
	title = {Self-{Consistent} {Calculation} of the {Localized} {Orbital} {Scaling} {Correction} for {Correct} {Electron} {Densities} and {Energy}-{Level} {Alignments} in {Density} {Functional} {Theory}},
