@incollection{di_valentin_piecewise_2014,
	address = {Berlin, Heidelberg},
	title = {Piecewise {Linearity} and {Spectroscopic} {Properties} from {Koopmans}-{Compliant} {Functionals}},
	volume = {347},
	isbn = {978-3-642-55067-6 978-3-642-55068-3},
	url = {http://link.springer.com/10.1007/128_2013_504},
	abstract = {Density-functional theory is an extremely powerful and widely used tool for quantum simulations. It reformulates the electronic-structure problem into a functional minimization with respect to the charge density of the energy of interacting electrons in an external potential. While exact in principle, it is approximate in practice, and even in its exact form it is meant to reproduce correctly only the total energy and its derivatives, such as forces, phonons, or dielectric properties. Quasiparticle levels are outside the scope of the theory, with the exception of the highest occupied state, since this is given by the derivative of the energy with respect to the number of electrons. A fundamental property of the exact energy functional is that of piecewise linearity at fractional occupations in between integer ﬁllings, but common approximations do not follow such piecewise behavior, leading to a discrepancy between total and partial electron removal energies. Since the former are typically well described, and the latter provide, via Janak’s theorem, orbital energies, this discrepancy leads to a poor comparison between predicted and measured spectroscopic properties. We illustrate here the powerful consequences that arise from imposing the constraint of piecewise linearity to the total energy functional, leading to the emergence of orbital-density-dependent functionals that (i) closely satisfy a generalized Koopmans condition, and (ii) are able to describe with great accuracy spectroscopic properties.},
	urldate = {2019-01-04},
	booktitle = {First {Principles} {Approaches} to {Spectroscopic} {Properties} of {Complex} {Materials}},
	publisher = {Springer Berlin Heidelberg},
	author = {Dabo, Ismaila and Ferretti, Andrea and Marzari, Nicola},
	editor = {Di Valentin, Cristiana and Botti, Silvana and Cococcioni, Matteo},
	year = {2014},
	doi = {10.1007/128_2013_504},
	pages = {193--233},
}

