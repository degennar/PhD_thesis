@article{taquet_bidirectional_2020,
	title = {Bidirectional associations between {COVID}-19 and psychiatric disorder: retrospective cohort studies of 62 354 {COVID}-19 cases in the {USA}},
	volume = {0},
	issn = {2215-0366, 2215-0374},
	shorttitle = {Bidirectional associations between {COVID}-19 and psychiatric disorder},
	url = {https://www.thelancet.com/journals/lanpsy/article/PIIS2215-0366(20)30462-4/abstract},
	doi = {10.1016/S2215-0366(20)30462-4},
	abstract = {{\textless}h2{\textgreater}Summary{\textless}/h2{\textgreater}{\textless}h3{\textgreater}Background{\textless}/h3{\textgreater}{\textless}p{\textgreater}Adverse mental health consequences of COVID-19, including anxiety and depression, have been widely predicted but not yet accurately measured. There are a range of physical health risk factors for COVID-19, but it is not known if there are also psychiatric risk factors. In this electronic health record network cohort study using data from 69 million individuals, 62 354 of whom had a diagnosis of COVID-19, we assessed whether a diagnosis of COVID-19 (compared with other health events) was associated with increased rates of subsequent psychiatric diagnoses, and whether patients with a history of psychiatric illness are at a higher risk of being diagnosed with COVID-19.{\textless}/p{\textgreater}{\textless}h3{\textgreater}Methods{\textless}/h3{\textgreater}{\textless}p{\textgreater}We used the TriNetX Analytics Network, a global federated network that captures anonymised data from electronic health records in 54 health-care organisations in the USA, totalling 69·8 million patients. TriNetX included 62 354 patients diagnosed with COVID-19 between Jan 20, and Aug 1, 2020. We created cohorts of patients who had been diagnosed with COVID-19 or a range of other health events. We used propensity score matching to control for confounding by risk factors for COVID-19 and for severity of illness. We measured the incidence of and hazard ratios (HRs) for psychiatric disorders, dementia, and insomnia, during the first 14 to 90 days after a diagnosis of COVID-19.{\textless}/p{\textgreater}{\textless}h3{\textgreater}Findings{\textless}/h3{\textgreater}{\textless}p{\textgreater}In patients with no previous psychiatric history, a diagnosis of COVID-19 was associated with increased incidence of a first psychiatric diagnosis in the following 14 to 90 days compared with six other health events (HR 2·1, 95\% CI 1·8–2·5 \textit{vs} influenza; 1·7, 1·5–1·9 \textit{vs} other respiratory tract infections; 1·6, 1·4–1·9 \textit{vs} skin infection; 1·6, 1·3–1·9 \textit{vs} cholelithiasis; 2·2, 1·9–2·6 \textit{vs} urolithiasis, and 2·1, 1·9–2·5 \textit{vs} fracture of a large bone; all p{\textless}0·0001). The HR was greatest for anxiety disorders, insomnia, and dementia. We observed similar findings, although with smaller HRs, when relapses and new diagnoses were measured. The incidence of any psychiatric diagnosis in the 14 to 90 days after COVID-19 diagnosis was 18·1\% (95\% CI 17·6–18·6), including 5·8\% (5·2–6·4) that were a first diagnosis. The incidence of a first diagnosis of dementia in the 14 to 90 days after COVID-19 diagnosis was 1·6\% (95\% CI 1·2–2·1) in people older than 65 years. A psychiatric diagnosis in the previous year was associated with a higher incidence of COVID-19 diagnosis (relative risk 1·65, 95\% CI 1·59–1·71; p{\textless}0·0001). This risk was independent of known physical health risk factors for COVID-19, but we cannot exclude possible residual confounding by socioeconomic factors.{\textless}/p{\textgreater}{\textless}h3{\textgreater}Interpretation{\textless}/h3{\textgreater}{\textless}p{\textgreater}Survivors of COVID-19 appear to be at increased risk of psychiatric sequelae, and a psychiatric diagnosis might be an independent risk factor for COVID-19. Although preliminary, our findings have implications for clinical services, and prospective cohort studies are warranted.{\textless}/p{\textgreater}{\textless}h3{\textgreater}Funding{\textless}/h3{\textgreater}{\textless}p{\textgreater}National Institute for Health Research.{\textless}/p{\textgreater}},
	language = {en},
	number = {0},
	urldate = {2021-01-07},
	journal = {The Lancet Psychiatry},
	author = {Taquet, Maxime and Luciano, Sierra and Geddes, John R. and Harrison, Paul J.},
	month = nov,
